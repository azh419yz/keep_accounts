.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f1f5f9;
}

.header-left {
  display: flex;
  align-items: center;
}

.header-right {
  padding-right: 24rpx;
}

.cancel-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.content {
  flex: 1;
  padding: 24rpx 32rpx 32rpx;
  box-sizing: border-box;
}

.type-toggle {
  border-radius: 9999rpx;
  background-color: #e5e7eb;
  padding: 4rpx;
}

.type-toggle-inner {
  display: flex;
  align-items: center;
}

.type-item {
  padding: 8rpx 24rpx;
  border-radius: 9999rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.type-item.active {
  background-color: #ffffff;
  color: #ef4444;
  font-weight: 500;
}

.section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 22rpx;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
  border-radius: 24rpx;
}

.category-item.active {
  border-width: 1rpx;
  border-style: solid;
  border-color: #bfdbfe;
  background-color: #eff6ff;
}

.category-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.category-icon.meal {
  background-color: #eff6ff;
}

.category-icon.shopping {
  background-color: #fdf2f8;
}

.category-icon.daily {
  background-color: #ecfdf3;
}

.category-icon.traffic {
  background-color: #e0f2fe;
}

.category-icon.sport {
  background-color: #f7fee7;
}

.category-icon.play {
  background-color: #f5f3ff;
}

.category-icon.house {
  background-color: #fffbeb;
}

.category-icon.more {
  background-color: #f3f4f6;
}

.category-text {
  font-size: 22rpx;
  color: #0f172a;
}

.form-card {
  margin-top: 8rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  border: 1rpx solid #e5e7eb;
  padding-bottom: 0;
  overflow: hidden;
}

.form-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx 8rpx;
  font-size: 20rpx;
  color: #9ca3af;
}

.form-header-left {
  color: #9ca3af;
}

.form-header-right {
  color: #9ca3af;
}

.amount-row {
  padding: 0 24rpx 16rpx;
  text-align: right;
}

.amount-label {
  font-size: 20rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 4rpx;
}

.amount-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #0f172a;
}

.remark-row {
  display: flex;
  align-items: center;
}

.remark-icon {
  margin-right: 12rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

.remark-text {
  flex: 1;
  font-size: 24rpx;
  color: #6b7280;
}

.keyboard {
  display: flex;
  border-top: 1rpx solid #e5e7eb;
}

.keyboard-main {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

.key {
  padding: 24rpx 0;
  text-align: center;
  border-right: 1rpx solid #e5e7eb;
  border-bottom: 1rpx solid #e5e7eb;
  font-size: 32rpx;
  color: #0f172a;
}

.key:nth-child(3n) {
  border-right-width: 0;
}

.key.back {
  font-size: 28rpx;
}

.keyboard-side {
  width: 180rpx;
  border-left: 1rpx solid #e5e7eb;
  display: flex;
  flex-direction: column;
}

.side-key {
  flex: 1;
  border-bottom: 1rpx solid #e5e7eb;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #4b5563;
}

.side-key.date .side-key-sub {
  margin-top: 4rpx;
  font-size: 18rpx;
  color: #9ca3af;
}

.side-key-icon {
  font-size: 26rpx;
  margin-bottom: 4rpx;
}

.side-key.done {
  background-color: #2563eb;
}

.done-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
}


