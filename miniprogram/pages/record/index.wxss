.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f1f5f9;
}

.type-pill {
  border-radius: 9999rpx;
  background-color: #eff6ff;
  /* Match charts page background */
  padding: 4rpx;
}

.type-pill-inner {
  display: flex;
  align-items: center;
}

.type-pill-item {
  padding: 8rpx 32rpx;
  /* Adjusted padding for pill shape */
  border-radius: 9999rpx;
  font-size: 26rpx;
  /* Slightly larger text */
  color: #64748b;
}

.type-pill-item.active {
  background-color: #ffffff;
  color: #2563eb;
  /* Active color matches charts page blue */
  font-weight: 500;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  /* Add subtle shadow */
}

.section {
  margin-bottom: 24rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
  border-radius: 24rpx;
}

.category-item.active {
  border-width: 1rpx;
  border-style: solid;
  border-color: #bfdbfe;
  background-color: #eff6ff;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 46rpx;
  margin-bottom: 4rpx;
}

.category-icon.meal {
  background-color: #eff6ff;
}

.category-icon.shopping {
  background-color: #fdf2f8;
}

.category-icon.daily {
  background-color: #ecfdf3;
}

.category-icon.traffic {
  background-color: #e0f2fe;
}

.category-icon.sport {
  background-color: #f7fee7;
}

.category-icon.play {
  background-color: #f5f3ff;
}

.category-icon.house {
  background-color: #fffbeb;
}

.category-icon.more {
  background-color: #f3f4f6;
}

.category-text {
  font-size: 22rpx;
  color: #0f172a;
}

.form-card {
  margin-top: 12rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  overflow: hidden;
}

.form-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 24rpx 0rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.form-header-left {
  color: #9ca3af;
}

.amount-row {
  padding: 0 24rpx 8rpx;
  text-align: right;
}

.amount-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #0f172a;
}

.remark-row {
  display: flex;
  align-items: center;
}

.remark-icon {
  margin-right: 12rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.remark-text {
  flex: 1;
  font-size: 24rpx;
  color: #6b7280;
}

.keyboard {
  display: flex;
  border-top: 1rpx solid #e5e7eb;
}

.keyboard-main {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

.key {
  padding: 24rpx 0;
  text-align: center;
  border-right: 1rpx solid #e5e7eb;
  border-bottom: 1rpx solid #e5e7eb;
  font-size: 32rpx;
  color: #0f172a;
}

.key:nth-child(3n) {
  border-right-width: 0;
}

.key.back {
  font-size: 28rpx;
}

.keyboard-side {
  width: 180rpx;
  border-left: 1rpx solid #e5e7eb;
  display: flex;
  flex-direction: column;
}

.side-key {
  flex: 1;
  border-bottom: 1rpx solid #e5e7eb;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #4b5563;
}

.side-key.date .side-key-sub {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.side-key-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.side-key.done {
  background-color: #2563eb;
}

.done-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
}