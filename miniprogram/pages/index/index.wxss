.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f1f5f9;
}

.header-section {
  background-color: #ffffff;
  padding: 24rpx 32rpx 32rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e7eb;
}

.month-and-summary {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
}

.month-wrapper {
  width: 25%;
  min-width: 180rpx;
  padding: 16rpx 20rpx;
  border-radius: 24rpx;
  background-color: #f9fafb;
  border: 1rpx solid #e5e7eb;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.month-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.month-text {
  font-size: 24rpx;
  color: #0f172a;
  font-weight: 500;
}

.month-arrow {
  font-size: 20rpx;
  color: #9ca3af;
}

.month-sub {
  margin-top: 8rpx;
  font-size: 20rpx;
  color: #9ca3af;
}

.summary-wrapper {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
}

.summary-card {
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  background-color: #f9fafb;
  border: 1rpx solid #e5e7eb;
}

.summary-label-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.summary-label {
  font-size: 22rpx;
  color: #6b7280;
}

.summary-tag {
  padding: 4rpx 10rpx;
  border-radius: 9999rpx;
  font-size: 18rpx;
}

.summary-tag.negative {
  background-color: #fee2e2;
  color: #ef4444;
}

.summary-tag.positive {
  background-color: #d1fae5;
  color: #10b981;
}

.summary-amount {
  margin-top: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.negative-text {
  color: #ef4444;
}

.positive-text {
  color: #10b981;
}

.content {
  flex: 1;
  padding: 16rpx 32rpx 32rpx;
  box-sizing: border-box;
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.section-date {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.section-date-main {
  font-size: 26rpx;
  font-weight: 500;
  color: #0f172a;
}

.section-date-sub {
  font-size: 20rpx;
  color: #9ca3af;
}

.section-total {
  font-size: 20rpx;
  color: #6b7280;
}

.section-total-amount {
  color: #ef4444;
  margin-left: 8rpx;
}

.bill-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.bill-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.bill-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.bill-icon-meal {
  background-color: #fff7ed;
}

.bill-icon-traffic {
  background-color: #eff6ff;
}

.bill-icon-bill {
  background-color: #ecfdf3;
}

.bill-icon-game {
  background-color: #f5f3ff;
}

.bill-info {
  display: flex;
  flex-direction: column;
}

.bill-title {
  font-size: 26rpx;
  color: #0f172a;
  font-weight: 500;
}

.bill-subtitle {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #9ca3af;
}

.bill-right {
  text-align: right;
}

.bill-amount {
  font-size: 26rpx;
  font-weight: 600;
}

.bill-time {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #9ca3af;
}

.load-more-hint {
  padding: 24rpx 0;
  text-align: center;
  font-size: 20rpx;
  color: #9ca3af;
}
