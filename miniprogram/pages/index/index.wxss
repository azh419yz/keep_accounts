.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f1f5f9;
  overflow: hidden;
}

.header-section {
  background-color: #ffffff;
  padding: 8rpx 32rpx 12rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e7eb;
}

.month-and-summary {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
}

.month-wrapper {
  width: 25%;
  min-width: 180rpx;
  padding: 12rpx 16rpx;
  border-radius: 24rpx;
  background-color: #f9fafb;
  border: 1rpx solid #e5e7eb;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
}

/* ... existing styles ... */

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.section-total {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #6b7280;
}

.section-total-label {
  margin-right: 8rpx;
}

/* ... */

.bill-item-wrapper {
  background-color: #ffffff;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
}

.month-main {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.month-text-col {
  display: flex;
  flex-direction: column;
}

.month-year {
  font-size: 20rpx;
  color: #6b7280;
  line-height: 1.2;
}

.month-bottom-row {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.month-num {
  font-size: 32rpx;
  color: #0f172a;
  font-weight: 600;
  line-height: 1.2;
}

.month-arrow {
  font-size: 20rpx;
  color: #9ca3af;
  margin-left: 8rpx;
}

.month-sub {
  margin-top: 8rpx;
  font-size: 20rpx;
  color: #9ca3af;
}

.summary-wrapper {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
}

.summary-card {
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  background-color: #f9fafb;
  border: 1rpx solid #e5e7eb;
}

.summary-label-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.summary-label {
  font-size: 22rpx;
  color: #6b7280;
}

.summary-tag {
  padding: 4rpx 10rpx;
  border-radius: 9999rpx;
  font-size: 18rpx;
}

.summary-tag.negative {
  background-color: #fee2e2;
  color: #ef4444;
}

.summary-tag.positive {
  background-color: #d1fae5;
  color: #10b981;
}

.summary-amount {
  margin-top: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.negative-text {
  color: #ef4444;
}

.positive-text {
  color: #10b981;
}

.content {
  flex: 1;
  height: 0;
  padding: 16rpx 32rpx 32rpx;
  box-sizing: border-box;
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.section-date {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.section-date-main {
  font-size: 26rpx;
  font-weight: 500;
  color: #0f172a;
}

.section-date-sub {
  font-size: 20rpx;
  color: #9ca3af;
}

.section-total {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 22rpx;
  color: #6b7280;
  flex-shrink: 0;
}

.section-total-tag {
  margin-right: 4rpx;
  color: #9ca3af;
}

.section-total-label {
  margin-right: 12rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.section-total-amount {
  font-weight: 500;
  white-space: nowrap;
  /* 防止极端情况下挤压 */
  flex-shrink: 1;
}

.bill-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.bill-cell {
  padding: 12rpx 0 !important;
  border-radius: 12rpx !important;
  overflow: hidden; /* 确保子元素不溢出圆角 */
  background-color: #ffffff; /* 避免背景色被父容器影响 */
}

.bill-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.bill-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.bill-icon-meal {
  background-color: #fff7ed;
}

.bill-icon-traffic {
  background-color: #eff6ff;
}

.bill-icon-bill {
  background-color: #ecfdf3;
}

.bill-icon-game {
  background-color: #f5f3ff;
}

.bill-info {
  display: flex;
  flex-direction: column;
}

.bill-title {
  font-size: 26rpx;
  color: #0f172a;
  font-weight: 500;
}

.bill-subtitle {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #9ca3af;
}

.bill-right {
  text-align: right;
}

.bill-amount {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
}

.load-more-hint {
  padding: 24rpx 0;
  text-align: center;
  font-size: 20rpx;
  color: #9ca3af;
}

/* 左滑删除相关样式 */
.swipe-cell-wrapper {
  width: 100%;
}

.swipe-delete-btn {
  /* 宽度由 JS 的 width 决定，这里不设 width */
  border-radius: 12rpx !important; /* 圆角 */
  background-color: #ebe4e4 !important;
  color: #ffffff !important;
  font-size: 28rpx !important;
  font-weight: 500 !important;
  
  /* 布局居中 */
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  
  /* 撑满父容器（高度自动继承） */
  height: 100% !important;
  padding: 0 !important;
  margin: 0 !important;
}

.bill-icon-income {
  background-color: #d1fae5;
}

.bill-item-wrapper {
  background-color: #ffffff;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
}
