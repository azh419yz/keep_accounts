.subtitle {
  font-size: 22rpx;
  color: #9ca3af;
}

.content {
  flex: 1;
  padding: 24rpx 32rpx 32rpx;
  box-sizing: border-box;
}

.bill-card {
  border-radius: 24rpx;
  padding: 24rpx 24rpx 20rpx;
  background-image: linear-gradient(135deg, #2563eb, #3b82f6, #0ea5e9);
  color: #ffffff;
  box-shadow: 0 24rpx 60rpx rgba(30, 64, 175, 0.45);
  margin-bottom: 32rpx;
}

.bill-card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.bill-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

.bill-arrow {
  font-size: 24rpx;
  color: #bfdbfe;
}

.bill-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.bill-month-section {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bill-month-text {
  font-size: 24rpx;
  color: #dbeafe;
  text-align: center;
  line-height: 1.4;
}

.bill-separator {
  width: 2rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

.bill-stats {
  flex: 1;
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.bill-stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.bill-stat-label {
  font-size: 22rpx;
  color: #dbeafe;
}

.bill-stat-value {
  font-size: 24rpx;
  font-weight: 600;
}

.positive-text {
  color: #bbf7d0;
}

.negative-text {
  color: #fecaca;
}

.section {
  margin-top: 24rpx;
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  border-width: 1rpx;
  border-style: solid;
  border-color: #e5e7eb;
}

.section.space {
  padding: 12rpx 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #0f172a;
}

.section-action {
  font-size: 22rpx;
  color: #2563eb;
}

.section-desc {
  display: block;
  margin-bottom: 16rpx;
  font-size: 20rpx;
  color: #9ca3af;
}

.budget-bar {
  position: relative;
  height: 16rpx;
  border-radius: 9999rpx;
  background-color: #f3f4f6;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.budget-bar-used {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 40%;
  background-color: #fbbf24;
}

.budget-bar-remain {
  position: absolute;
  left: 40%;
  top: 0;
  bottom: 0;
  width: 20%;
  background-color: #6ee7b7;
  opacity: 0.8;
}

.budget-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
}

.budget-percent {
  color: #6b7280;
}

.budget-tip {
  color: #9ca3af;
}

.placeholder-card {
  padding: 12rpx 16rpx;
  border-radius: 20rpx;
  border-style: dashed;
  border-width: 1rpx;
  border-color: #e5e7eb;
}

.placeholder-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.placeholder-title {
  font-size: 24rpx;
  color: #0f172a;
  font-weight: 500;
}

.placeholder-tag {
  font-size: 20rpx;
  color: #9ca3af;
}

.placeholder-desc {
  font-size: 20rpx;
  color: #9ca3af;
}